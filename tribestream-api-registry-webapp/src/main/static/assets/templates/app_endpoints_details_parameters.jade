div
  h2
    span Parameters
    .add-param(tabindex=0, x-ng-click="addParam()", app-endpoints-details-toc-anchor="Parameters")
      i.fa.fa-plus
  div.app-epd-params
    div(ng-show="endpoint.operation.parameters.length")
      table
        thead
          tr
            th name
            th type
            th placement
            th required
            th.description description
            th.valid-values valid values
            th
        tbody
          tr(x-ng-repeat="param in endpoint.operation.parameters | orderBy:'param.name'")
            td
              i(data-tribe-editable-text, data-value="param.name", data-adjust="false")
            td
              i(data-tribe-editable-text, data-value="param.type", data-adjust="false")
            td
              div(data-tribe-singleselect,
                  data-selected-option="param.in",
                  data-available-options="[{text:'Query parameter', value:'query'}, {text:'Header', value:'header'}, {text:'Path', value:'path'}, {text:'Form data', value:'formData'}, {text:'Body', value:'body'}]")
            td
              div(data-tribe-singleselect,
                  data-selected-option="param.required",
                  data-available-options="[{text: 'Yes', value: true}, {text: 'No', value: false}]")
            td.description
              div
                i(data-tribe-editable-block, data-content="param.description")
            td.valid-values
              div
                div(data-tribe-multiselect, data-selected-options="param.sampleValues", data-available-options="[]")
            td
              div
                i.fa.fa-trash-o(x-ng-click="removeParam(param);")
